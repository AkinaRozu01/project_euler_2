import math
from random import randint
class Fraction:
    numerator = 0
    denominator= 0
    
    def __init__(self, numerator, denominator):
        self.numerator=(numerator)
        self.denominator=(denominator)
    def fraction(self):
        print str(self.numerator) + "/" + str(self.denominator)
    def add(fraction):
        print str(fraction.numerator) + "+" + str(fraction.denominator)
n=randint(0,100)
d=randint(1,100)
y=randint(1,100)
z=randint(1,100)
f=Fraction(n, d) 
x=Fraction(y, z)
f.fraction()
x.fraction()

#each fraction is in 2 PARTS: name.numerator and name.denominator
#multiplying the denominators and numinators will get a new fraction
#1.denominator*2.denominator= NEW DENOMINATOR
#2.numerator * 1.denominator= numerator 1
#2.denominator * 1.numerator= numerator 2
#add numerators for NEW NUMERATOR
